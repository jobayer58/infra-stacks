DOMAIN_NAME=laravel.localhost           # The domain where Traefik will expose your app (e.g., app.mysite.com)
COMPOSE_PROJECT_NAME=laravel_prod       # Docker project name prefix to avoid container name conflicts

DB_PASSWORD=secret                      # Postgres user password
DB_ROOT_PASSWORD=secret                 # Postgres root password (if needed)
REDIS_PASSWORD=secret                   # Redis access password

APP_NAME="Laravel Production"           # The name of your application
APP_ENV=production                      # Environment type (local, staging, production)
APP_KEY=                                # App Key (Run 'php artisan key:generate' to fill this)
APP_DEBUG=false                         # Debug mode (ALWAYS false in production)
APP_URL=https://${DOMAIN_NAME}          # Base URL (uses the DOMAIN_NAME variable defined above)

LOG_CHANNEL=stack                       # Default logging channel
LOG_DEPRECATIONS_CHANNEL=null           # Channel for deprecation warnings
LOG_LEVEL=debug                         # Minimum log level to record

DB_CONNECTION=pgsql                     # Database driver (pgsql, mysql, sqlite)
DB_HOST=db                              # Hostname (must match the service name in docker-compose.yml)
DB_PORT=5432                            # Database port (internal Docker network port)
DB_DATABASE=app                         # Database name
DB_USERNAME=app                         # Database user
DB_PASSWORD=${DB_PASSWORD}              # Database password (syncs with the variable above)

BROADCAST_DRIVER=log                    # Driver for event broadcasting
CACHE_DRIVER=redis                      # Driver for caching (Redis is recommended for prod)
FILESYSTEM_DISK=local                   # Default file storage disk
QUEUE_CONNECTION=redis                  # Driver for queue jobs (Redis is faster than database)
SESSION_DRIVER=redis                    # Driver for user sessions
SESSION_LIFETIME=120                    # Session lifetime in minutes

MEMCACHED_HOST=127.0.0.1                # Memcached host (not used in this stack by default)

REDIS_HOST=redis                        # Redis hostname (must match service name in docker-compose)
REDIS_PASSWORD=${REDIS_PASSWORD}        # Redis password (syncs with the variable above)
REDIS_PORT=6379                         # Redis port

MAIL_MAILER=smtp                        # Mail driver
MAIL_HOST=mailpit                       # Mail server host (change to SES/SendGrid in production)
MAIL_PORT=1025                          # Mail server port
MAIL_USERNAME=null                      # SMTP username
MAIL_PASSWORD=null                      # SMTP password
MAIL_ENCRYPTION=null                    # Encryption protocol (tls/ssl)
MAIL_FROM_ADDRESS="hello@example.com"   # Default sender email address
MAIL_FROM_NAME="${APP_NAME}"            # Default sender name

AWS_ACCESS_KEY_ID=                      # AWS Access Key
AWS_SECRET_ACCESS_KEY=                  # AWS Secret Key
AWS_DEFAULT_REGION=us-east-1            # AWS Region
AWS_BUCKET=                             # S3 Bucket Name
AWS_USE_PATH_STYLE_ENDPOINT=false       # S3 endpoint style

VITE_APP_NAME="${APP_NAME}"             # Passes the app name to the frontend build